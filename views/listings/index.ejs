<% layout("/layout/boilerplate") %>
<body>
 
<style>
#filter{
display: flex;
align-items: center;
gap: 1rem;
}

.items-container a{
text-decoration: none;
color: black;
}

.filter{
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
    transition: transform 0.3s ease; 
}

.filter:hover{
    opacity: 1;
    transform: scale(1.2);
    text-decoration: underline;
}

.scrollable-container {
   
    width: 650px; /* Width of the container */
    height: 90px; /* Height of the container */
    overflow-x: auto; /* Make horizontal scrollable */
    scrollbar-width: none; /* Hide scrollbar for Firefox */
    -ms-overflow-style: none; /* Hide scrollbar for IE/Edge */
   
}

.scrollable-container::-webkit-scrollbar {
    display: none; /* Hide scrollbar for Webkit (Chrome, Safari, etc.) */
}

.items-container{
 
    width: fit-content; /* Container width adjusts to the content */
    white-space: nowrap; /* Prevent items from wrapping */
    direction: rtl; /* Right to Left direction for horizontal scroll */
}
.filter{
    display: inline-block;
    padding: 10px;
}


.two-btn{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 1rem;
    gap: 0.5rem;
}

.tag-toogle{
    border: 1px solid rgb(117, 117, 117);
    border-radius: 9px;
    font-size: 15px;
      width:230px;
    text-align: center;
    padding: 0.8rem;
    box-shadow: 1px 2px 1px rgb(118, 118, 118);
}

.tag-toogle:hover{
background-color: azure;
}

.scroll-button {
    width: 30px;
    /* top: 50%; */
    transform: translateY(-50%);
    background-color: transparent;
    border: 1px solid rgb(117, 117, 117);
    color: #656565;
    /* font-size: 18px; */
    cursor: pointer;
    font-size: 18px;
    margin-top: 0.7rem;
    border-radius: 60px;
    box-shadow: 1px 1px 1px rgb(228, 222, 215);
}
.scroll-button.left {
    left: 0;
}

.scroll-button.right {
    right: 0;
}
.up{
       font-size: 16px;
    }



@media (max-width:780px){
    .scroll-button{
        font-size: 14px;
    }
   .filter{
    margin-right: 0.8rem;
   }
}

.gst-info{
    display: none;
}


@media (max-width: 768px) {
    .tag-toogle{
        display: none;
    }
    .filter{
    font-size: 15px;
    }
    .scroll-button{
      margin-top: 0;
    }
    .up{
       font-size: 12px;
    }
}
</style>


<div id="filter">
    <button class="scroll-button left"><i class="fa-solid fa-chevron-left"></i></button>
    <div class="scrollable-container">
        <div class="items-container">
            <!-- Filter items here -->

            <a href="/listings/filter/Trending">
            <div class="filter  Trending">
                 <i class="fa-solid fa-fire"></i>
                 <p>Trending</p> 
            </div>
            </a>
            

            <a href="/listings/filter/Camping">
            <div class="filter  Camping">
                <i class="fa-solid fa-campground"></i>
                    <p>Camping</p>
             </div>
            </a>
             
             <a href="/listings/filter/Tiny Homes">
                <div class="filter  Tiny-Homes">
                    <i class="fa-solid fa-house"></i> 
                    <p>Tiny Homes</p>
             </div>
            </a>

             <a href="/listings/filter/Farms">
             <div class="filter  Farms">
                    <i class="fa-solid fa-tractor"></i>
                    <p>Farms</p>
             </div>
            </a>
             
             <a href="/listings/filter/Rooms">
             <div class="filter Rooms">
                <i class="fa-solid fa-hotel"></i>
                  <p>Rooms</p>
             </div>
            </a>
             
             <a href="/listings/filter/Treehouse">
              <div class="filter  Treehouse">
                    <i class="fa-solid fa-tree"></i>
                  <p>Tree houses</p>
             </div>
            </a>
             
             <a href="/listings/filter/Earth Homes">
                <div class="filter Earth-Homes">
                    <i class="fa-solid fa-earth-americas"></i>
                    <p>Earth Homes</p>
             </div>
            </a>


            <a href="/listings/filter/Beachfront">
                <div class="filter  Beachfront">
                   <i class="fa-solid fa-umbrella-beach"></i>
                   <p>Beech</p>
            </div>
            </a>

                <a href="/listings/filter/Caves">          
                  <div class="filter Caves">
                    <i class="fa-solid fa-igloo"></i>
                     <p>Caves</p>
                     </div>
                </a>
                 
                <a href="/listings/filter/Lake">
                    <div class="filter Lake">
                        <i class="fa-solid fa-water"></i>
                        <p>Lake</p>
                 </div>
                </a>

                <a href="/listings">
                    <div class="filter All">
                        <i class="fa-solid fa-house-flag"></i>
                        <p>All</p> 
                   </div>
                   </a>
        </div>
    </div>
    <button class="scroll-button right"><i class="fa-solid fa-chevron-right"></i></button>

    <div class="two-btn">
        <div class="ft-btn">
            <button type="button" class="btn btn-outline-dark up" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                <i class="fa-solid fa-sliders"> filter</i> 
            </button>
        </div>
        &nbsp;
        <br>
        <div class="tag-toogle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display before taxes</label>
            </div>
        </div>  
    </div>  
</div>


<div class=" row   row-cols-lg-3   row-cols-md-2   row-cols-sm-1">
    <% for(let listing of allListen){%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col  listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top  main-img" alt="Listing_img"  
         style="height: 20rem;">

             
<div class="  card-design card-img-overlay"><i class="fa-regular fa-heart  heart"></i></div>
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b>
        <br>
        &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
        <i class="gst-info"> &nbsp; &nbsp; +18% GST</i>
    </p>
        </div>
      </div>
       </a>
     <% } %>  
</div>
    

<script>
let taxSwitch = document.getElementById("flexSwitchCheckDefault");
taxSwitch.addEventListener("click", ()=>{
    // console.log("click");
let taxInfo =  document.getElementsByClassName("gst-info");
// console.log(taxInfo);
for(let info of taxInfo){
if(info.style.display  != "inline"){
    info.style.display = "inline";
}else{
    info.style.display = "none";
}
}
});


//scroll items by  button .............................................
document.addEventListener('DOMContentLoaded', function() {
    const scrollableContainer = document.querySelector('.scrollable-container');
    const scrollLeftButton = document.querySelector('.scroll-button.left');
    const scrollRightButton = document.querySelector('.scroll-button.right');
    
    scrollLeftButton.addEventListener('click', function() {
        scrollableContainer.scrollBy(-50, 0); // Scroll left by 50 pixels
    });
    
    scrollRightButton.addEventListener('click', function() {
        scrollableContainer.scrollBy(50, 0); // Scroll right by 50 pixels
    });
});
</script>

<script src="filter.js"></script>
</body>








 









